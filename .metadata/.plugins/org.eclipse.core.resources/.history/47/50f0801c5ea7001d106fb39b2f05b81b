package com.newbie.world;

import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

import com.newbie.entities.Enemy;
import com.newbie.entities.Entity;
import com.newbie.main.Game;

public class World {

	private Tile[] tiles;
	public static int WIDTH, HEIGHT;
	
	public World(String path) {
		
		try {
			BufferedImage map = ImageIO.read(getClass().getResource(path));
			WIDTH = map.getWidth();
			HEIGHT = map.getHeight();
			int[] pixels = new int[WIDTH*HEIGHT];
			tiles = new Tile[WIDTH*HEIGHT];
			map.getRGB(0, 0, WIDTH, HEIGHT, pixels, 0, WIDTH);
			for(int xx = 0; xx < WIDTH; xx++) {
				for(int yy = 0; yy < HEIGHT; yy++) {
					
					int pixelAtual = pixels[xx + (yy * WIDTH)];
					
					//Chão
					if(pixelAtual == 0xFFC3C3C3) {
						tiles[xx+(yy*WIDTH)] = new FloorTile(xx*16, yy*16, Tile.TILE_FLOOR);
					}
					
					//Parede
					else if(pixelAtual == 0xFF7F7F7F) {
						tiles[xx+(yy*WIDTH)] = new FloorTile(xx*16, yy*16, Tile.TILE_WALL);
					}
					
					//Player
//					else if(pixelAtual == 0xFF00A2E8) {
//						Game.player.setX(xx*16);
//						Game.player.setY(yy*16);
//					}
//					
//					//Cura
//					else if(pixelAtual == 0xFFFFF200) {
//						
//					}
//					
					//Inimigo
//					else if(pixelAtual == 0xFFED1C24) {
//						
//						for(int i = 0; i < 6; i++) {
//							int rand = (int)(Math.random()*2)+3;
//							if(rand%2==0) {
//								//Inimigo Azul
//								Game.entities.add(new Enemy(xx*16, yy*16, 16, 16, Entity.ENEMY_BLUE));
//							}else {
//								//Inimigo Marrom
//								Game.entities.add(new Enemy(xx*16, yy*16, 16, 16, Entity.ENEMY_BROWN));
//							}
//						}
//						
//					}
//					
//					//Espada
//					else if(pixelAtual == 0xFF22B14C) {
//						
//					}
//					
//					//Buff
//					else if(pixelAtual == 0xFFFF7F27) {
//						
//					}
					
					//Chão
					else {
						tiles[xx+(yy*WIDTH)] = new FloorTile(xx*16, yy*16, Tile.TILE_FLOOR);
					}
				}
			}
		} catch(IOException e){
			e.printStackTrace();
		}
			
	}
	
	public void render(Graphics g) {
		
		for(int xx = 0; xx < WIDTH; xx++) {
			for(int yy = 0; yy < HEIGHT; yy++) {
				Tile tile = tiles[xx + (yy*WIDTH)];
				tile.render(g);
			}
		}
		
	}
	
}
