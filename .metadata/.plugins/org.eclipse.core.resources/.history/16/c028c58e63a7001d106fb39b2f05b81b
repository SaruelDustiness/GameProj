package com.newbie.world;

import java.awt.Graphics;
import java.awt.image.BufferedImage;

import com.newbie.main.Game;

public class Tile {

	public static BufferedImage TILE_FLOOR = Game.tilemap.getSprite(32, 32, 16, 16);
	public static BufferedImage TILE_WALL = Game.tilemap.getSprite(192, 16, 16, 16);
	public static BufferedImage enemyBlue = Game.enemy.getSprite(0, 0, 16, 16);
	
	private BufferedImage sprite;
	private int x, y;
	
	public Tile(int x, int y, BufferedImage sprite) {
		this.x = x;
		this.y = y;
		this.sprite = sprite;
	}
	
	public void render(Graphics g) {
		
		g.drawImage(sprite, x, y, null);
		
	}
	
}
